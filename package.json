{
  "name": "browsochrones",
  "version": "0.0.4",
  "description": "Create isochrones and accessibility images in the browser",
  "main": "./build/index",
  "repository": {
    "type": "git",
    "url": "https://github.com/conveyal/browsochrones"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "browserify": {
    "transform": "babelify"
  },
  "scripts": {
    "build": "browserify lib/index.js > build/index.js",
    "lint": "standard",
    "prepublish": "babel lib --out-dir build",
    "start": "npm run www & npm run watch",
    "test": "babel-node test/index.js",
    "watch": "watchify -dv -t babelify -r isomorphic-fetch -r transitive-js -r leaflet-transitivelayer -r ./lib/index.js:browsochrones -o build/index.js",
    "www": "serve"
  },
  "author": "Conveyal",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.1.2",
    "babel-eslint": "^4.1.4",
    "babel-polyfill": "^6.0.16",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-stage-0": "^6.0.15",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "isomorphic-fetch": "^2.2.0",
    "leaflet-transitivelayer": "^0.1.0",
    "serve": "^1.4.0",
    "standard": "^5.3.1",
    "tape": "^4.2.2",
    "transitive-js": "^0.8.2",
    "watchify": "^3.2.0"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
